<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycompany.backend.dao.itemDao">
	<select id="selectByPage" parameterType="pager" resultType="board">
		SELECT rnum, itm_code, itm_name, v_no
		FROM (
		  SELECT ROWNUM as rnum, itm_code, itm_name, v_no
		  FROM (
		    SELECT itm_code, itm_name, v_no
		    FROM tb_itm
		    ORDER BY itm_code DESC
		  )
		  <!-- WHERE rownum &lt;= #{endRowNo} -->
		)
		<!-- WHERE rnum &gt;= #{startRowNo} -->
	</select>
	
	<select id="count" resultType="int">
		SELECT count(*) FROM tb_itm
	</select>
</mapper>


