<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycompany.backend.dao.locationDao">
	<select id="selectByPage" parameterType="pager" resultType="board">
		SELECT rnum, lct_code, lct_cat
		FROM (
		  SELECT ROWNUM as rnum, lct_code, lct_cat
		  FROM (
		    SELECT lct_code, lct_cat
		    FROM tb_lct
		    ORDER BY lct_code DESC
		  )
		  <!-- WHERE rownum &lt;= #{endRowNo} -->
		)
		<!-- WHERE rnum &gt;= #{startRowNo} -->
	</select>
	
	<select id="count" resultType="int">
		SELECT count(*) FROM tb_lct
	</select>
</mapper>


